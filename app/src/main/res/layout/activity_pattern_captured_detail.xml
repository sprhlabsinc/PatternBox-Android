<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">
                <TextView
                    android:id="@+id/lbName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="name: up"
                    android:focusable="false"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/lbId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="id: dd"
                    android:focusable="false"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                tools:ignore="RtlHardcoded">
                <Button
                    android:id="@+id/infoedit_but"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_nav_iedit"
                    tools:ignore="ButtonStyle" />
                <Button
                    android:id="@+id/bookmark_but"
                    android:layout_marginLeft="10dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_bookmark_no"
                    tools:ignore="ButtonStyle" />
                <Button
                    android:id="@+id/edit_but"
                    android:layout_marginLeft="10dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_edit"
                    tools:ignore="ButtonStyle" />
                <Button
                    android:id="@+id/delete_but"
                    android:layout_marginLeft="10dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_nav_idelete"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView
            android:id="@+id/imgPattern"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_camera"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:contentDescription="" />
        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/lbl_notes" />

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp" />
    </LinearLayout>
</RelativeLayout>
