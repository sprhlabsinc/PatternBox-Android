<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/project_img"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/project_template"
            android:background="@drawable/bg_thumbnail"
            tools:ignore="ContentDescription,RtlHardcoded" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:text="Name"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                <EditText
                    android:id="@+id/name_txt"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextFields" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:text="For"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                <EditText
                    android:id="@+id/client_txt"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:textColor="@android:color/black"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextFields" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="Measurements"
                    tools:ignore="HardcodedText,RtlHardcoded" />
                <EditText
                    android:id="@+id/measurements_txt"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:inputType="text"
                    android:layout_centerVertical="true"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextFields" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/notes_txt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:layout_height="60dp"
        android:textSize="14dp"
        android:hint="Notes"
        android:layout_centerVertical="true"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SpUsage,TextFields" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:text="Pattern"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgPattern"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone"
                    android:background="@drawable/bg_thumbnail"
                    tools:ignore="ContentDescription,RtlHardcoded"
                    android:contentDescription="" />
                <ImageView
                    android:id="@+id/imgBookMark"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:visibility="gone"
                    android:background="@drawable/icon_bookmarkframe"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">
                <TextView
                    android:id="@+id/lbName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:focusable="false"
                    android:textSize="20sp"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/lbId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/lbCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/pattern_select_but"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:text="Select Pattern"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/transparent"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:text="Fabrics"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <org.lucasr.twowayview.TwoWayView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawSelectorOnTop="false"
            android:background="@android:color/transparent"
            style="@style/TwoWayView"/>
        <Button
            android:id="@+id/fabrics_select_but"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Select Fabrics"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/transparent"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:text="Notions"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/notions_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <Button
            android:id="@+id/notions_select_but"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select Notions"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/transparent"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</LinearLayout>
